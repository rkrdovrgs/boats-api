{
    "compilerOptions": {
        "lib": [
            "es6",
            "dom"
        ],
        "noStrictGenericChecks": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "dist/app",
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}