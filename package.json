{
  "name": "boats-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "npm run clean && concurrently \"npm run assets:w\" \"npm run tsc:w\" \"npm run server:w\" ",
    "clean": "del-cli public/dist",
    "assets:w": "concurrently \"cpx public/src/**/*.{html,css} public/dist/app -w\" \"cpx public/{index.html,systemjs.config.js} public/dist -w\" \"cpx public/content/**/*.{css,jpg} public/dist/content -w\"",
    "tsc:w": "./node_modules/.bin/tsc --p public/tsconfig.json -w",
    "server:w": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node -- ./server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rkrdovrgs/boats-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rkrdovrgs/boats-api/issues"
  },
  "homepage": "https://github.com/rkrdovrgs/boats-api#readme",
  "devDependencies": {
    "@types/core-js": "^0.9.42",
    "@types/express": "^4.0.36",
    "@types/node": "^8.0.7",
    "concurrently": "^3.4.0",
    "cpx": "^1.5.0",
    "del-cli": "^1.1.0",
    "nodemon": "^1.11.0",
    "ts-node": "^3.1.0",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "@angular/common": "^4.1.3",
    "@angular/compiler": "^4.1.3",
    "@angular/core": "^4.1.3",
    "@angular/forms": "^4.1.3",
    "@angular/http": "^4.1.3",
    "@angular/platform-browser": "^4.1.3",
    "@angular/platform-browser-dynamic": "^4.1.3",
    "@angular/router": "^4.1.3",
    "@angular/upgrade": "^4.1.3",
    "body-parser": "^1.17.2",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "express": "^4.15.3",
    "jquery": "^3.2.1",
    "mongojs": "^2.4.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.1",
    "systemjs": "^0.20.13",
    "typescript": "2.4.1",
    "typings": "^2.1.1",
    "zone.js": "^0.8.11"
  }
